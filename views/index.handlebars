{{!-- HOMEPAGE Display Greeting list of groups --}}
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        {{!--Greeting "Hello User" message --}}
        <h1>{{msg}}</h1>
        {{!-- Title for group changing --}}
        <h2>Choose the group you would like to join!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="group-text">Example Text</label>
            <input type="text" id="group-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          {{!--Group List--}}
        <h3>Groups:</h3>
        <ul id="group-list" class="list-group">
          {{!-- List of Groups W/GroupName-Author-date --}}
          {{!-- Individual Group info will all link to same place
          whether the user clicks on name,date or author will be a link to the groups template with info from the table --}}
          {{#each groups}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="group/{{this.id}}">{{this.name}}</a>
            
          </li>
          {{/each}}
          
            {{!--under the group list is a Create-Group-button --}}
            {{!-- Create group button will open a module to render new group --}}
            {{!-- Create group button will ask 4 simple questions --}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
